<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://cloud.cit.ie/promotion" xmlns:r="http://cloud.cit.ie/promotion"
	elementFormDefault="qualified">


	<xs:element name="promotionRequest">
		<xs:complexType>
			<xs:sequence minOccurs="0" maxOccurs="unbounded">
				<xs:element name="productCode" type="xs:integer" />
				<xs:element name="productQuantity" type="xs:integer" />
				<xs:element name="productDiscount" type="xs:decimal" />
			</xs:sequence>
			<xs:attribute name="basketAmount" use="required" type="xs:decimal" />
			<xs:attribute name="loyaltyCard" use="required" type="xs:decimal" />
			<xs:attribute name="transactionID" use="required" type="xs:decimal" />
		</xs:complexType>
	</xs:element>		

	<xs:element name="promotionResponse">
		<xs:complexType>
			<xs:attribute name="confirmationNumber" type="xs:string" />
			<xs:attribute name="promotionNumber" type="xs:string" />
			<xs:attribute name="promotionValue" type="xs:decimal" />
		</xs:complexType>
	</xs:element>
 
</xs:schema>