		<int-jdbc:outbound-channel-adapter
		id="jdbc-WSoutboundChannelAdapter"
		query="insert into lot_lu_loadtest_logger (
			    lo_message_start_time, 
			    lo_message_test_id, 
			    lo_message_channel, 
			    lo_message_service,
			    lo_message_timestamp)
    	values (:headers[timestamp],
